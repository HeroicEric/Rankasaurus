.page-header
  %h1 Domains

.well
  = link_to "Add domain", new_domain_path, :class => "btn primary"

- unless @domains.nil?
  %table.zebra-striped
    %thead
      %tr
        %th Name
        %th Url
        %th Keywords
        %th Actions
    %tbody
    - @domains.each do |domain|
      %tr
        %td= link_to domain.name, domain_path(domain)
        %td= domain.url
        %td= domain.keywords.count
        %td
          = link_to "View", domain_path(domain), :id => "view_domain_#{domain.id}"
          = link_to "Edit", edit_domain_path(domain), :id => "edit_domain_#{domain.id}"
          = link_to "Delete", domain_path(domain), confirm: "Are you sure you want to delete #{domain.name}?", method: :delete, :id => "delete_domain_#{domain.id}"
- else
  %p Asante Sana! Squash banana! We we nuga! Mi mi apana!
