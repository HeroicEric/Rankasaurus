!!!
%html
  %head
    %title Rankasaurus
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    
    .topbar
      .fill
        .container
          %a.brand(href="#{root_path}") Rankasaurus
          %ul.nav
            %li= link_to "Home", root_path
            %li= link_to "Domains", domains_path

    .container

      - if flash[:notice]
        .alert-message.success.fade.in(data-alert="alert")
          %a.close(href="#")x
          = notice
      - if flash[:alert]
        .alert-message.error.fade.in(data-alert="alert")
          %a.close(href="#")x
          = alert

      = yield
    
    %footer.footer
      .container
        %p.pull-right
          %a.back-to-top(href="#") Back to top
      